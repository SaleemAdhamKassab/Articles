@using ArticlesProject.Helper;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArticlesProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArticlesProject.styles.css" asp-append-version="true" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

    <link href="@Url.Content("~/site.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/article.png" height="30" width="100" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole(Roles.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                        }

                        @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Articles" asp-action="Index">Articles</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Publishers">Publishers</a>
                        </li>

                        @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Dashboards" asp-action="Dashboard">Dashboard</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" href=@Url.Content("~/Home/Index#aboutUs")>About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href=@Url.Content("~/Home/Index#ourTeam")>Our Team</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href=@Url.Content("~/Home/Index#contactUs")>Contact Us</a>
                        </li>
                        @if (User.IsInRole(Roles.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">Manage Roles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Manage Users</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted" style="position:absolute; bottom: 10px;width:100%;text-align: center;">
        <div class="container">
            Copyright  &copy; 2023 <a href="https://www.linkedin.com/in/saleemadhamkassab/" target="_blank">Saleem Kassab</a>
        </div>
        <h3 class="made_by">Made with ♡</h3>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
