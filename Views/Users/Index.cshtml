@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h4 style=" text-align: center;">Users</h4>
<hr />
<a class="btn btn-outline-primary mb-1" asp-action="Add">Create New</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-userId="@user.Id">Modify Profile</a>
                    <a class="btn btn-outline-primary" asp-action="ManageRoles" asp-route-userId="@user.Id">Manage Roles</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-userId="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>