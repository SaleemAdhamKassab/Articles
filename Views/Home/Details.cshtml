@model ArticleDetailesViewModel

@{
    ViewData["Title"] = "Details";
}

<section class="py-3 card mb-3">
    <div class="container">
        <div class="row mb-2">
            <img class="mb-3" src="~/images/articles/@Model.Image" style="width:100%; height:400px" />
            <h2 style="text-align:center">@Model.Title</h2>
        </div>
        <div class="row mb-2">
            <p>@Model.Content</p>
        </div>
        <div class="row mb-2">
            <div class="row">
                <dt class="col-3">Category</dt>
                <dd class="col-9"> @Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-3">Author</dt>
                <dd class="col-9"> @Html.DisplayFor(model => model.Author)</dd>

                <dt class="col-3">Publish Date</dt>
                <dd class="col-9"> @Html.DisplayFor(model => model.Date)</dd>
            </div>
        </div>
    </div>
</section>
<div>
    <a asp-controller="Home" asp-action="Index">Back to Articles</a>
</div>